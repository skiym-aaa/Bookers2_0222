<div class="body">
  <div class="container">
    <div class="row">
      <%= render 'users/sidebar', book: @book ,user:current_user %>
        <div class="col-lg-9">
          <h2>Books</h2>
            <table class="table">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                  <% @books.each do |book| %>
                  <tr>
                    <td></td>
                    <td><%= link_to book.title, book_path(book.id) %></td>
                    <td><%= book.body %></td>
                  </tr>
                  <% end %>
              </tbody>
            </table>
        </div>
    </div>
  </div>
</div>