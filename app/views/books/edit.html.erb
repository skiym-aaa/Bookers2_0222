<div class="body">
  <div class="container">
    <div class="row">
      <div class="top-message col-md-offset-3 col-md-6">
        <h1>Editing Book</h1>
          <%if @book.errors.any? %>
            <h5><%= @book.errors.count %> errors prohibited this book from being saves:</h5>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
          <% end %>
          <%= form_for(@book) do |f| %>
            <h5>Title</h5>
            <%= f.text_field :title,class:"col-xs-12" %>
            <h5>Body</h5>
            <%= f.text_area :body,class:"col-xs-12" %>
            <div class="button">
             <%= f.submit 'Update Book',class:"btn btn-primary btn-block" %>
            </div>
          <% end %>
          <br>
          <p><%= link_to "Show", book_path %>
          |  <%= link_to "Back", books_path %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>