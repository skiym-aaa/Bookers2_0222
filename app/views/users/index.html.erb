<div class="body">
  <div class="container">
    <div class="row">
      <%= render 'users/sidebar', book: @book ,user:current_user %>
        <div class="col-xs-9">
          <h2>Users</h2>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>image</th>
                  <th>name</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td>
                      <%= link_to user_path(user.id) do%>
                      <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                      <% end %>
                    </td>
                    <td><%= user.name %></td>
                    <td><%= link_to "Show", user_path(user.id) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>
    </div>
  </div>
</div>