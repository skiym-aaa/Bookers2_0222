<div class="col-lg-3">
  <h2>User info</h2>
    
    <table class="table">
      <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
      </tbody>
    </table>
    <div class="row">
      <p><%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
    </div>
  <h2>New book</h2>
    <%= form_for(book) do |f| %>
      <%if book.errors.any? %>
        <h5><%= book.errors.count %> errors prohibited this book from being saves:</h5>
        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
        <h4>Title</h4>
          <%= f.text_field :title,class:"col-xs-12" %>
          <br>
        <h4>Opinion</h4>
          <%= f.text_area :body,class:"col-xs-12" %>
            <div class="create-button">
              <%= f.submit "Create Book", class:"btn btn-primary btn-block" %>
            </div>
    <% end %>
</div>